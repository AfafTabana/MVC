@model Instructor

<h1> Instructor</h1>

<div class="card">
    <img src="/images/@Model.imag" alt="Employee Image" width="100" height="300 "/>
    <h2>@Model.Name</h2>
    <div class="info"><span class="label">Id:</span> @Model.Id</div>
    <div class="info"><span class="label">Salary:</span> @Model.salary</div>
    <div class="info"><span class="label">Address:</span> @Model.address</div>
    <div class="info"><span class="label">CrsId:</span> @Model.CrsId</div>
    <div class="info"><span class="label">DeptId:</span> @Model.DeptId</div>
</div>


<style>
    .card {
        width: 320px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        padding: 16px;
        font-family: Arial, sans-serif;
        margin: 20px auto;
    }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 12px;
        }

        .card h2 {
            margin: 0 0 12px 0;
            font-size: 24px;
            color: #333;
        }

        .card .info {
            margin-bottom: 8px;
        }

    .label {
        font-weight: bold;
        color: #555;
        display: inline-block;
        width: 80px;
    }
</style>